<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1 class="heading">ながのCAKE</h1>
      
      <% if customer_signed_in? %>
      <nav>
        <ul class="nav-list">
        <li class="nav-list-item">
          <%= link_to "マイページ", public_customer_path, class: 'btn btn-default' %>
        </li>

        <li class="nav-list-item">
          <%= link_to "商品一覧", public_items_path, class: "btn btn-primary" %>
        </li>

        <li class="nav-list-item">
          <%= link_to "カート", admin_orders_path, class: "btn btn-primary" %>
        </li>

        <li class="nav-list-item">
          <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-primary" %>
        </li>
        </ul>
      </nav>
      
      <% elsif admin_signed_in? %>

      <nav>
        <ul class="nav-list">

        <li class="nav-list-item">
          <%= link_to "商品一覧", admin_items_path, class: 'btn btn-default' %>
        </li>

        <li class="nav-list-item">
          <%= link_to "会員一覧", admin_customers_path, class: "btn btn-primary" %>
        </li>

        <li class="nav-list-item">
          <%= link_to "注文履歴一覧", admin_orders_path, class: "btn btn-primary" %>
        </li>

        <li class="nav-list-item">
          <%= link_to "ジャンル一覧", genres_path, class: "btn btn-primary" %>
        </li>

        <li class="nav-list-item">
          <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-primary" %>
        </li>
        </ul>
      </nav>
        

      <% else %>
        <nav>
        <ul class="nav-list">  
        <li class="nav-list-item">
          <%= link_to "About", admin_items_path, class: "btn btn-primary" %>
        </li>

        <li class="nav-list-item">
          <%= link_to "商品一覧", admin_items_path, class: "btn btn-primary" %>
        </li>

        <li class="nav-list-item">
          <%= link_to "新規登録", admin_items_path, class: "btn btn-primary" %>
        </li>

        <li class="nav-list-item">
          <%= link_to "ログイン", new_customer_session_path, class: "btn btn-primary" %>
        </li>
        </ul>
      </nav>
      <% end %>

    </header>



    <%= yield %>
    <footer></footer>

  </body>
</html>
