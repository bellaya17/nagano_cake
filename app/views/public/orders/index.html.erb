<div class="container">
  <h2>注文履歴一覧</h2>
  <table class="table table-bordered">
    <thead class="table-head" style="background-color:#F5F5F5;">
      <tr>
        <th scope="col">注文日</th>
        <th scope="col">配送先</th>
        <th scope="col">注文商品</th>
        <th scope="col">支払金額</th>
        <th scope="col">注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td >
            <p><%= "〒" + order.postal_code %></p>
            <p><%= order.address %></p>
            <p><%= order.name %></p>
          </td>

          <td>
          <% order.order_details.each do |f| %>
            <p><%= f.item.name %></p>
          <%end %>
          </td>

          <td><%= order.total_payment %>円</td>
          <td>
          <%= link_to "表示する", public_order_path(order), class: 'btn btn-primary' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>