<div class="container">
  <h1>注文情報入力</h1>

  <div>
    <table class="table table-bordered">
      <tbody>
        <%= form_with model: @order, url: public_orders_confirm_path, local: true do |f| %>
        <tr>
          <th>支払い方法</th>
          <td>
            <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
            <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

            <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
            <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
          </td>
        </tr>
        <tr>

          <th>お届け先</th>
          <td>
          <!--自身の住所-->
           <div class="radio">
            <%= f.radio_button :select_address, '0' %>
            <%= f.label :select_address, "ご自身の住所", value: 0, style: "display: inline-block;" %>
            <p>〒<%= @customer.postal_code %></p>&ensp;<%= @customer.address %><br>
            <%= @customer.last_name %>&ensp;<%= @customer.first_name %>
           </div>



          <!--登録済住所-->

            <div class="radio">
            <%= f.radio_button :select_address, '1' %>
            <%= f.label :select_address, "登録済住所から選択", value: 1, style: "display: inline-block;" %>
            <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :full_address, prompt: "住所を選択してください") %>
            </div>


          <!--新しいお届け先-->
          <div class="radio">
            <%= f.radio_button :select_address, '2'%>
            <%= f.label :select_address, "新しいお届け先", value: 2, style: "display: inline-block;" %>

              <div class="field">
                <label class="postal_code-label">郵便番号（ハイフンなし）</label>
                <%= f.number_field :postal_code, autofocus: true, class:"" %>
              </div>

              <div class="field">
                <label class="address-label">住所</label>
                <%= f.text_area :address, autofocus: true, class:"" %>
              </div>

              <div class="field">
                <label class="name-label">宛名</label>
                <%= f.text_field :name, autofocus: true, class:"" %>
              </div>
          </div>
          </td>
        </tr>

      </tbody>
    </table>

    <div>
      <%= f.submit '確認画面へ進む', class:"btn btn-primary col-xs-3 " %>
    </div>
    <% end %>
  </div>
</div>