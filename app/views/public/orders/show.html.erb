<div class"container">
  <h2>注文履歴詳細</h2>
  
    <h4>注文情報</h4>
    <table class"table table-bordered">
      <tbody>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        
        <tr>
          <th>配送先</th>
          <td>
            <p><%= "〒" + @order.postal_code %>&emsp;<%= @order.street_address %></p>
            <p><%= @order.receive_name %></p>
          </td>
        </tr>
        
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
      </tbody>
    </table>
    
    <h4>注文内容</h4>
    <table class"table table-bordered">
      <thead>
        <tr>
          <th scope="col">商品</th>
          <th scope="col">単価（税込）</th>
          <th scope="col">個数</th>
          <th scope="col">小計</th>
        </tr>
      </thead>
      <tbody>
         <% @order_details.each do |order_detail| %>
         <tr>
           <td><%= order_detail.item.name %></td>
           <td><%= (order_detail.price * 1.1).to_i%></td>
           <td><%= order_detail.amount %></td>
           <td><%= ((order_detail.price * order_detail.amount) * 1.1).to_i %></td>
         </tr>
         <% end %>
      </tbody>
    </table>
    
    <h4>請求情報</h4>
    <table class"table table-bordered">
      <tbody>
        <tr>
          <th>商品合計</th>
          <td><%= @order.total_payment %></td>
        </tr>
        
        <tr>
          <th>配送料</th>
          <td><%= @order.delivery_fee %></td>
        </tr>
        
        <tr>
          <th>ご請求額</th>
          <td><%= @order.total_payment + @order.delivery_fee %></td>
        </tr>
      </tbody>
    </table>
</div>
