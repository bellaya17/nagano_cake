<div class="container">
  <div>
    <%= attachment_image_tag @item, :image, fallback: "no_image.jpg", size: "300x217" %>
  </div>

  <div>
    <h2><%= @item.name %></h2>
    <p><%= @item.introduction %><p>
    <h4>￥<%= @item.with_tax_price %><span>（税込）</span></h4>

    <%= form_with model: @cart_item, url: public_cart_items_path, local: true do |f| %>
      <%= f.label :amount, "個数選択" %>
      <%= f.number_field :amount, min: 1, max: 100, placeholder: '個数選択', class:"amount-select-form" %>
      <%= f.hidden_field :item_id, :value => @item.id %>
      <%= f.submit "カートに入れる", class: 'btn btn-outline-success' %>
    <% end %>

  </div>
</div>