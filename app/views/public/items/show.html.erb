<div class="container">
  <div class="item-image">
    <%= attachment_image_tag(@item, :image, fallback: "no_image.jpg",size: "300x217" ) %>
  </div>

  <div class="item-detail">
    <h2><%= @item.name %></h2>
    <p><%= @item.introduction %><p>
    <h4 class="item-price">￥<%= (@item.price * 1.1).to_i %><span>（税込）</span></h4>

    <%= form_with model: @cart_item, url: cart_items_path, method: :post, local: true do |f| %>
    <%= f.label :amount, "個数選択" %>
    <%= f.number_field :amount, min: 1, max: 100, placeholder: '個数選択', class:"amount-select-form" %>
    <%= f.hidden_field :item_id, :value => @item.id %>
    <%= f.submit "カートに入れる", class: "btn btn-secondry" %>
<% end %>

  </div>
</div>