<div class="container">
  <h1>会員情報編集</h1>

  <%= form_with model: @customer, url: public_customer_path, local: true do |f| %>

    <div class="row">
      <div class="col-md-2"> <%= f.label "氏名" %><br /></div>
      <div class="col-md-2"><%= f.text_field :last_name, autofocus: true %></div>
      <div class="col"> <%= f.text_field :first_name, autofocus: true %></div>
    </div>

    <div class="row">
      <div class="col-md-2"> <%= f.label "フリガナ" %><br /></div>
      <div class="col-md-2"><%= f.text_field :last_name_kana, autofocus: true %></div>
      <div class="col"><%= f.text_field :first_name_kana, autofocus: true %></div>
    </div>

  <div class="row">
    <div class="col-md-2"><%= f.label :postal_code, "郵便番号" %><br /></div>
    <div class="col"><%= f.number_field :postal_code, autofocus: true %></div>
  </div>

  <div class="row">
    <div class="col-md-2"><%= f.label :address, "住所" %><br /></div>
    <div class="col"><%= f.text_area :address, autofocus: true %></div>

  </div>

  <div class="row">
    <div class="col-md-2"><%= f.label :telephone_number, "電話番号" %><br /></div>
    <div class="col"><%= f.telephone_field :telephone_number, autofocus: true %></div>
  </div>

  <div class="row">
    <div class="col-md-2"><%= f.label :email, "メールアドレス" %><br /></div>
    <div class="col"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
  </div>

    <div class="row">
    <div class="col-md-2"><%= f.submit "編集内容を保存", class: 'btn btn-outline-success'%></div>
    <div class="col"><%= link_to "退会する", public_customers_unsubscribe_path, method: :GET, class: "btn btn-outline-danger" %></div>
    </div>
  <% end %>

</div>