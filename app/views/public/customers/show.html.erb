<div class="container">

  <div class="show-heading">
    <h1>マイページ</h1>
  </div>

  <h2>登録情報</h2>

  <%= link_to "編集する", edit_public_customer_path, class: "btn btn-secondary" %>

  <table class="customer-table">
    <tbody>
      <tr>
        <th>氏名</th>
        <td><%= @customer.last_name %>&ensp;<%= @customer.first_name %></td>
      </tr>

      <tr>
        <th>カナ</th>
        <td><%= @customer.last_name_kana %>&ensp;<%= @customer.first_name_kana %></td>
      </tr>

      <tr>
        <th>郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>

      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>

      <tr>
        <th>電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>

      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </tbody>
  </table>

  <h2>配送先一覧</h2>
  <%= link_to "一覧を見る", public_addresses_path, class: "btn" %>

  <h2>注文履歴</h2>
  <%# if @customer == current_customer %>
  <%= link_to "一覧を見る", edit_public_customer_path, class: "btn" %>
  <%# end %>


</div>
