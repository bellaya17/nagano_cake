<div class="container">

  <h1>マイページ</h1>

  <h2>
    <span class="text col-xs-9">
    <a>登録情報</a>
  <span>
    <%= link_to "編集する", edit_public_customer_path, class: 'btn btn-outline-success' %>
  </span>
  </h2>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th class="table-head" style="background-color:#F5F5F5;">氏名</th>
        <td><%= @customer.last_name %>&ensp;<%= @customer.first_name %></td>
      </tr>

      <tr>
        <th class="table-head" style="background-color:#F5F5F5;">カナ</th>
        <td><%= @customer.last_name_kana %>&ensp;<%= @customer.first_name_kana %></td>
      </tr>

      <tr>
        <th class="table-head" style="background-color:#F5F5F5;">郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th class="table-head" style="background-color:#F5F5F5;">住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th class="table-head" style="background-color:#F5F5F5;">電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th class="table-head" style="background-color:#F5F5F5;">メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </thead>
  </table>

  <h2>
    <span class="text col-xs-9">
    <a>配送先一覧</a>
    <span><%= link_to "一覧を見る", public_addresses_path, class: "btn btn-outline-primary" %></span>
  </h2>

  <h2>
    <span class="text col-xs-9">
    <a>注文履歴</a>
    <span><%= link_to "一覧を見る", public_orders_path, class: "btn btn-outline-primary" %></span>
  </h2>
</div>
