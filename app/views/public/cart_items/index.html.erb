<div class="container">
  <h1>ショッピングカート</h1>
  <%= link_to "カートを空にする", @cart_item, method: :delete, class: "btn btn-secondry" %>
  
  <table class="cart_table">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th>>&nbsp;</th>
      </tr>
    </thead>
    
    <tbody>
      <% @total_price = 0 %>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td>
            <%= form_with model: inside_cart, url: inside_cart_path(id: inside_cart.id), method: :patch, local: true do |f| %>
							<%= f.number_field :amount, min: 1, max: 100 %>
							<%= f.submit "変更" %>
						<% end %>
        </td>
        <td><%= cart_item.subtotal %></td>
        <% @total_price += cart_item.subtotal %>
        <td><%= link_to"削除する", cart_item_path, method: :delete, class: "btn btn-secondry" %></td>
      </tr>
      <% end %>
    </tbody>
    
  </table>
  
  <table>
    <tr>
      <th>合計金額</th>
      <td><%= @total_price %></td>
    </tr>
  </table>
  
  <%= link_to "買い物を続ける", root_path, class: "btn btn-secondry" %>
  
  <div>
    <% if @cart_items.count == 0  %>
			<%= link_to "情報入力に進む", cart_items_path, class: "btn btn-success go-to-order" %>
		<% else %>
			<%= link_to "情報入力に進む", new_order_path, class: "btn btn-success go-to-order" %>
		<% end %>
  </div>
</div>
