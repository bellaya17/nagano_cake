<div class="container">
  <h1>ショッピングカート</h1>
  
  <div class="text-right">
    <%= button_to "カートを空にする", @cart_item, method: :delete, class: "btn btn-outline-danger" %>
  </div>

  <div class="row">
    <table class="table table-bordered">
      <thead class="table-head" style="background-color:#F5F5F5;">
        <tr>
          <th>商品名</th>
          <th>単価（税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
  
      <% @cart_items.each do |cart_item| %>
      <tbody>
        <tr>
          <td><%= attachment_image_tag cart_item.item, :image, size: "50x50", fallback: "no_image.jpg" %>
          <%= cart_item.item.name %></td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td>
              <%= form_with model: cart_item, url: public_cart_item_path(id: cart_item.id), local: true do |f| %>
  							<%= f.number_field :amount, min: 1, max: 100 %>
  							<%= f.submit "変更", class: "btn btn-outline-success" %>
  						<% end %>
          </td>
  
          <td><%= cart_item.item.with_tax_price * cart_item.amount %></td>
          <td><%= link_to"削除する", public_cart_item_path(id: cart_item.id), method: :delete, class: "btn btn-outline-danger" %></td>
        </tr>
        </tbody>
        <% end %>
    </table>
  
    <table class="table table-bordered">
      <thead class="table-head" style="background-color:#F5F5F5;">
      <tr>
        <th>合計金額</th>
      </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @total_price %>円</td>
        </tr>
      </tbody>
    </table>
  </div>
  

  <%= link_to "買い物を続ける", public_homes_top_path, class: "btn btn-outline-primary" %>

  <div>
    <%= link_to "情報入力に進む", new_public_order_path, class: "btn btn-outline-success" %>
  </div>
</div>
