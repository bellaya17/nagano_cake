<div class="container">
  <div class="btn-warapper">
    <%= link_to "+", new_admin_item_path, class:"btn-real" %>
  </div>
  
  <h1>商品一覧</h1>

  <table class="table">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
      </tr>
    </thead>

    <tbody>
      <% @items.each_with_index do |item, i| %>
      <tr>
        <td><%= i+1 %></td>
        <td><%= link_to item.name, admin_item_path(item.id) %></td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>
