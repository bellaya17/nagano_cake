<div class="container">
  <h1>商品一覧</h1>

  <table class="table">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item, i| %>
      <tr>
        <td><%= i %></td>
        <td><%= link_to item.name, admin_item_path(item.id) %></td>
        <td><%= item.price %></td>
        <td><%= item.genre %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>
