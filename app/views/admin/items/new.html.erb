<h1>商品新規登録</h1>

<%= form_with model: @item, local:true do |f| %>

  <h4>商品画像</h4>
  <%= f.attachment_field :image_id %>

  <h4>商品名</h4>
  <%= f.text_field :name %>

  <h4>商品説明</h4>
  <%= f.text_area :introduction %>

  <h4>ジャンル</h4>
  <%= f.collection_select :name, genres.all, :genre_id, :name, include_blank: "選択して下さい" %>

  <h4>税抜価格</h4>
  <%= f.text_field :price %>

