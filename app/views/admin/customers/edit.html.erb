<div class="container">
  <h1><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h1>
  <%= form_with model: @customer, url: admin_customer_path, local: true do |f| %>


  <div class="row">
    <div class="col-md-2"><h4>会員ID</h4></div>
    <div class="col"><%= @customer.id %></div>
  </div>

  <div class="row">
    <div class="col-md-2"><h4>氏名</h4></div>
    <div class="col">
      <%= f.text_field :last_name %>
      <%= f.text_field :first_name %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2"><h4>フリガナ</h4></div>
    <div class="col">
      <%= f.text_field :last_name_kana %>
      <%= f.text_field :first_name_kana %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2"><h4>郵便番号</h4></div>
    <div class="col"><%= f.text_field :postal_code %></div>
  </div>
  <div class="row">
    <div class="col-md-2"><h4>住所</h4></div>
    <div class="col"><%= f.text_field :address %></div>
  </div>
  <div class="row">
    <div class="col-md-2"><h4>電話番号</h4></div>
    <div class="col"><%= f.text_field :telephone_number %></div>
  </div>
  <div class="row">
    <div class="col-md-2"><h5>メールアドレス</h5></div>
    <div class="col"><%= f.text_field :email %></div>
  </div>

  <div class="row">
     <%= f.label :会員ステータス, class: "col-md-2" %>
      <div class="col">
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "有効" %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "退会" %>
      </div>
  </div>


  <%= f.submit '変更を保存', class: "btn btn-outline-success" %>

<% end %>

</div>