<div class="container">
  <h1><%= customer.name %>さんの会員情報編集</h1>
  <%= form_with model: @customer, url: admin_c_path, local: true do |f| %>

  <h4>会員ID</h4>
  <%= @customer.customer %>

  <h4>氏名</h4>
  <%= f.text_field :first_name %>
  <%= f.text_field :last_name %>

  <h4>フリガナ</h4>
  <%= f.text_field :first_name_kana %>
  <%= f.text_field :last_name_kana %>

  <h4>郵便番号</h4>
  <%= f.text_field :postal_code %>

  <h4>住所</h4>
  <%= f.text_field :address %>

  <h4>電話番号</h4>
  <%= f.text_field :telephone_number %>

  <h4>メールアドレス</h4>
  <%= f.text_field :email %>

  <%= f.submit '変更を保存' %>

<% end %>

</div>