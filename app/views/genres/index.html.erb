<div class="container">
  <h1>ジャンル一覧・追加</h1>

  <%= form_with model:@new_genre, local:true do |f| %>

    <h4>ジャンル名</h4>
    <%= f.text_field :name %>

    <%= f.submit '新規投稿', class: 'btn btn-outline-success' %>
  <% end %>

  <table class="table table-bordered">
    <thead class="table-head" style="background-color:#F5F5F5;" >
      <tr>
      <th>ジャンル</th><th></th>
    </tr>
    </thead>

    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_genre_path(genre), class: 'btn btn-outline-success' %></td>
    </tr>
    <% end %>


  </table>

</div>
